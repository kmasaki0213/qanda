<h1>Show</h1>

<p>Title:<%= @question.title %></p>
<p>Name:<%= @question.name %></p>
<p>Content:<%= @question.content %></p>

<h2>Answers</h2>

  <% @question.answers.each do |answer|  %>
  <tr>
    <p>Name:<%= answer.name %></p>
    <p>Content:<%= answer.content %></p>
    <%= link_to 'Denstroy Answer', [answer.question, answer], data: { turbo_method: 'delete', turbo_confirm: "Are you sure?"} %>
  </tr>
  <% end %>

<h2>Add a answer</h2>
<%= form_with model: [@question, @question.answers.build] do |form| %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>
  <div>
  <%= form.submit %>
  </div>

<% end %>